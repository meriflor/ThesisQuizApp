<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color"
    android:orientation="vertical"
    tools:context=".Student.StudentQuestionsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="#f7f7f7"
        android:foregroundGravity="center"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/question_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1/10"
                android:textAlignment="center"
                android:textColor="#333"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/question_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Question?"
                android:textAlignment="center"
                android:textColor="#333"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_optionA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:padding="20dp"
        android:textSize="15sp"
        android:background="@drawable/button_question"
        android:text="a. Option A"
        android:textAllCaps="false"
        android:textColor="#222"
        app:layout_constraintBottom_toTopOf="@+id/btn_optionB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_optionB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:padding="20dp"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_question"
        android:text="b. Option B"
        android:textAllCaps="false"
        android:textColor="#222"
        app:layout_constraintBottom_toTopOf="@+id/btn_optionC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_optionA" />

    <Button
        android:id="@+id/btn_optionC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:padding="20dp"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_question"
        android:text="c. Option C"
        android:textAllCaps="false"
        android:textColor="#222"
        app:layout_constraintBottom_toTopOf="@+id/btn_optionD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_optionB" />

    <Button
        android:id="@+id/btn_optionD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:padding="20dp"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_question"
        android:text="d. Option D"
        android:textAllCaps="false"
        android:textColor="#222"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_optionC" />

</androidx.constraintlayout.widget.ConstraintLayout>